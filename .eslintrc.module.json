{
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "plugins": [],

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "rules": {
    "strict": ["error", "global"],
    "import/order": ["error", {
      "alphabetize": {
        "order": "asc"
      },
      "newlines-between": "always"
    }]
  },

  "overrides": [
    {
      "files": ["**/*.test.js"],
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended"]
    },
    {
      "files": ["**/fixtures/**/*.js"],
      "rules": {
        "strict": "off"
      }
    }
  ]
}
