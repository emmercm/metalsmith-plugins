{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  dependencyDashboard: true,
  configMigration: true,
  timezone: 'America/Los_Angeles',
  assignees: [
    '@emmercm',
  ],
  reviewers: [
    '@emmercm',
  ],
  assignAutomerge: false,
  vulnerabilityAlerts: {
    labels: [
      'security',
    ],
    platformAutomerge: true,
    groupName: '',
    schedule: [],
    dependencyDashboardApproval: false,
    minimumReleaseAge: '',
    rangeStrategy: 'update-lockfile',
    commitMessageSuffix: '[SECURITY]',
    branchTopic: '{{{datasource}}}-{{{depName}}}-vulnerability',
    prCreation: 'immediate',
  },
  separateMultipleMajor: true,
  separateMajorMinor: true,
  separateMinorPatch: false,
  schedule: 'on the 1st day of the month',
  prCreation: 'immediate',
  prHourlyLimit: 0,
  automerge: true,
  platformAutomerge: true,
  packageRules: [
    {
      matchCategories: [
        'node',
      ],
      enabled: false,
    },
  ],
  npm: {
    lockFileMaintenance: {
      enabled: true,
      schedule: 'on the 2nd day of the month',
    },
    rangeStrategy: 'bump',
    minimumReleaseAge: '3 days',
    internalChecksFilter: 'strict',
    packageRules: [
      {
        groupName: 'dependencies',
        matchDepTypes: [
          'dependencies',
        ],
        matchUpdateTypes: [
          'patch',
          'minor',
        ],
      },
      {
        matchDepTypes: [
          'dependencies',
        ],
        bumpVersion: 'patch',
      },
      {
        matchDepTypes: [
          'devDependencies',
        ],
        groupName: 'dev dependencies',
        matchUpdateTypes: [
          'patch',
          'minor',
        ],
      },
      {
        matchPackageNames: [
          '/^@typescript-eslint/',
          '/^eslint/',
        ],
        groupName: 'ESLint',
      },
      {
        matchPackageNames: [
          '@jest/globals',
          '@types/jest',
          'jest',
          'jest-junit',
          'ts-jest',
        ],
        groupName: 'Jest',
      },
      {
        matchPackageNames: [
          'lerna',
        ],
        groupName: 'Lerna',
        prPriority: -9,
      },
      {
        matchPackageNames: [
          'typescript',
        ],
        groupName: 'TypeScript',
        prPriority: -10,
      },
      {
        matchUpdateTypes: [
          'pin',
        ],
        groupName: 'dependency ranges',
        schedule: 'at any time',
        prCreation: 'immediate',
        platformAutomerge: true,
      },
      {
        matchPackageNames: [
          '@linthtml/linthtml',
        ],
        enabled: false,
      },
      {
        matchDepTypes: [
          'optionalDependencies',
          'peerDependencies',
          'engines',
        ],
        enabled: false,
      },
    ],
  },
}
